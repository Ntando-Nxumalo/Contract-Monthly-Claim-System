@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-page-center">
    <div class="auth-container">
        <div class="auth-header">
            <h2>Welcome to the Contract Monthly Claim System</h2>
            <p>Enter your credentials to access the dashboard.</p>
        </div>
        <form asp-controller="Account" asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ReturnUrl" value="@(ViewData["ReturnUrl"] ?? "")" />
            <div class="form-group">
                <input type="email" name="Email" class="form-control" placeholder="Email" required />
            </div>
            <div class="form-group">
                <input type="password" name="Password" class="form-control" placeholder="Password" required />
            </div>

            @* Show server-side errors as Bootstrap alerts *@
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    @foreach (var entry in ViewData.ModelState.Values)
                    {
                        foreach (var error in entry.Errors)
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    }
                </div>
            }

            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <div class="auth-footer">
            <span>Don't have an account? <a href="@Url.Action("Register", "Account")">Register</a></span>
        </div>
    </div>
</div>
